---
import NavBar from "@/components/NavBar.astro";
import Footer from "@/components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Fonsol Group - Bachas de Cocina</title>
    <meta
      name="description"
      content="Bachas de cocina de acero inoxidable y de cerámica"
    />
    <meta
      name="keywords"
      content="fonsol, bachas, cocina, acero inoxidable, cerámica"
    />
    <meta name="author" content="Fonsol Group" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <NavBar />
    <div class="max-w-screen-2xl flex flex-wrap mx-auto">
      <slot />
    </div>
    <Footer />

    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
    ></script>
    <script
      src="https://code.iconify.design/iconify-icon/1.0.7/iconify-icon.min.js"
    ></script>
  </body>
</html>

<style>
  html,
  body {
    font-family: "Poppins", sans-serif;
    background-color: #000;
    margin: 0;
  }
</style>
